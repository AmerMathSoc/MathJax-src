/**
 * @fileoverview    Set up (or un set up) links so that the
 *                  components source can be used in CommonJS files.
 *
 * @author dpvc@mathjax.org (Davide Cervone)
 */

const fs = require("fs");
const path = require("path");

function rm(file) {
  fs.existsSync(file) && fs.unlinkSync(file);
}

rm('tsconfig.json');
rm('components/src/package.json');
rm(node + '/#js');
rm(node + '/#root');
rm(node + '/#mml3');
rm(node + '/#default-font');
rm(node + '/#menu');
rm(node + '/#sre');
rm(node + '/#mhchem');

if (process.argv[2] === 'true') {
  fs.writeFileSync('components/src/package.json', '{\n  "type": "commonjs"\n}\n');
  fs.writeFileSync('tsconfig.json', '{\n  "extends": "./tsconfig-es5.json"\n}\n');
  //
  // Needed for node -r esm that requires mathjax-full or node-main.js
  //
  fs.symlinkSync('mathjax-full/js5', node + '/#js');
  fs.symlinkSync('mathjax-full/js5/components/cjs', node + '/#root');
  fs.symlinkSync('mathjax-full/js5/input/mathml/mml3/cjs', node + '/#mml3');
  fs.symlinkSync('mathjax-modern-font/js5', node + '/#default-font');
  fs.symlinkSync('mj-context-menu/cjs', node + '/#menu');
  fs.symlinkSync('speech-rule-engine/js', node + '/#sre');
  fs.symlinkSync('mhchemparser/dist', node + '/#mhchem');
} else {
  fs.writeFileSync('tsconfig.json', '{\n  "extends": "./tsconfig-es6.json"\n}\n');
}
