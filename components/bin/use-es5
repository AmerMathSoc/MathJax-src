/**
 * @fileoverview    Set up (or un set up) links so that the
 *                  components source can be used in CommonJS files.
 *
 * @author dpvc@mathjax.org (Davide Cervone)
 */

const fs = require("fs");
const path = require("path");

function rm(file) {
  fs.existsSync(file) && fs.unlinkSync(file);
}

rm('js');
rm('tsconfig.json');

if (process.argv[2] === 'true') {
  fs.symlinkSync('js5', 'js');
  fs.symlinkSync('tsconfig-es5.json', 'tsconfig.json');
  fs.symlinkSync('mathjax-modern-font/js5', 'node_modules/#default-font');
  fs.symlinkSync('mj-context-menu/js', 'node_modules/#menu');
  fs.symlinkSync('speech-rule-engine/js', 'node_modules/#sre');
  fs.symlinkSync('mhchemparser/js', 'node_modules/#mhchem');
  fs.writeFileSync('components/src/package.json', '{\n  "type": "commonjs"\n}\n');
} else {
  fs.symlinkSync('js6', 'js');
  fs.symlinkSync('tsconfig-es6.json', 'tsconfig.json');
  rm('node_modules/#default-font');
  rm('node_modules/#menu');
  rm('node_modules/#sre');
  rm('node_modules/#mhchem');
  rm('components/src/package.json');
}
