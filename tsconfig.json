{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES5",
    "downlevelIteration": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "lib": ["ES6", "DOM", "ES2019"],
    "noLib": false,
    "sourceMap": true,
    "outDir": "js",
    "typeRoots": ["./typings"]
  },
  "include": ["ts/**/*"]
}
