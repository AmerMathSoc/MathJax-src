{
  "extends": "./tsconfig-common.json",
  "compilerOptions": {
    "target": "ES6",
    "outDir": "js6",
    "module": "ES2022",
    "moduleResolution": "node",
    "paths": {
      "#root/*": ["./ts/components/mjs/*"],
      "#mml3/*": ["./ts/input/mathml/mml3/mjs/*"],
      "#menu/*": ["./node_modules/mj-context-menu/js/*"],
      "#sre/*": ["./node_modules/speech-rule-engine/mjs/*"],
      "#mhchem/*": ["./node_modules/mhchemparser/esm/*"],
      "#default-font/*": ["./node_modules/mathjax-modern-font/js6/*"]
    }
  },
  "exclude": ["ts/**/cjs/*"]
}
